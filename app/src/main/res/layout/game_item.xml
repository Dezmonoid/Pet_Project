<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="164dp"
    android:layout_margin="2dp"
    android:background="@color/green">


    <ImageView
        android:id="@+id/game_image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_margin="6dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/game_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="20dp"
        android:text="@string/app_name"
        android:textColor="@color/text_color"
        app:layout_constraintLeft_toRightOf="@id/game_image"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/game_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="32dp"
        android:text="@string/app_name"
        android:textColor="@color/text_color"
        app:layout_constraintLeft_toRightOf="@id/game_image"
        app:layout_constraintTop_toTopOf="@id/game_name" />

    <TextView
        android:id="@+id/game_platform"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="32dp"
        android:text="@string/app_name"
        android:textColor="@color/text_color"
        app:layout_constraintLeft_toRightOf="@id/game_image"
        app:layout_constraintTop_toTopOf="@id/game_date" />

    <TextView
        android:id="@+id/game_company"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="32dp"
        android:text="@string/app_name"
        android:textColor="@color/text_color"
        app:layout_constraintLeft_toRightOf="@id/game_image"
        app:layout_constraintTop_toTopOf="@id/game_platform" />


</androidx.constraintlayout.widget.ConstraintLayout>